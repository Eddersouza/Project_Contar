<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Contar</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/FontAwesome")
    @Styles.Render("~/Content/materialize")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    
    <nav class="navbar blue darken-4">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Contar", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Adicionar", "New", "AccountPayable")</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
       
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/materialize")
    @Scripts.Render("~/bundles/datepicker/i18n")
    <script src="~/Scripts/pages/contarSite.js"></script>
    <script>

        let layoutSite = contarSite();

        $(document).ready(layoutSite.getSiteReadyDefaults);
        
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
