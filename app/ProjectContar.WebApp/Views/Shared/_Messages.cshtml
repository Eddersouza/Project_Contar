@using ProjectContar.WebApp.ViewModels.Shared

@model MessageView

@if (Model.Information.Any())
{
    <div class="alert alert-success custom-message-font" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @foreach (var item in Model.Information)
        {
            @item @:<br />
        }
    </div>
}

@if (Model.Warnings.Any())
{
    <div class="alert alert-warning custom-message-font" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @foreach (var item in Model.Warnings)
        {
            @item @:<br />
        }
    </div>
}

@if (Model.Errors.Any())
{
    <div class="alert alert-danger custom-message-font" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @foreach (var item in Model.Errors)
        {
            @item
        }
    </div>
}